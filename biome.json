{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"include": ["./**/*.js", "./**/*.ts"],
		"ignore": [
			"**/node_modules",
			"**/dist",
			"**/build",
			"**/coverage",
			"**/lib",
			"**/.wrangler"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
