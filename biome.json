{
	"$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
	"files": {
		"includes": [
			"**/*.js",
			"**/*.ts",
			"!**/node_modules",
			"!**/dist",
			"!**/build",
			"!**/coverage",
			"!**/lib",
			"!**/.wrangler"
		]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
